<table class="table table-bordered">
<tr>
   <% @workstreams.sort.each do |stream| %><td><a href="<%= url('/stream/'+stream) %>"><%= stream %></a></td> <% end %>
</tr>
</table>

<br />

<table class="table table-bordered">
<thead>
<tr>
<th>Backlog</th>
<th>Blocked</th>
<th>In Progress</th>
<th>Pending Review</th>
<th>Production</th>
</tr>
</thead>
</tbody>
<tr>
<td>
      <% @issues.each do |issue| %>
         <% if (issue.status_id == 8 or issue.status_id == 12) && !issue.assigned_to then %>
         <a href="<%= @site %>/issues/<%= issue.ticket_id %>" rel="external"><%= issue.ticket_id %></a> <%= issue.subject %>
         <% if issue.assigned_to then %>(<%= issue.assigned_to %>)<% end %><br />
         <% end %>
       <% end %>
</td>
<td>
      <% @issues.each do |issue| %>
           <% if issue.status_id == 12 or issue.status_id == 11 then %>
           <a href="<%= @site %>/issues/<%= issue.ticket_id %>" rel="external"><%= issue.ticket_id %></a> <%= issue.subject %>
           <% if issue.assigned_to then %>(<%= issue.assigned_to %>)<% end %><br />
           <% end %>
      <% end %>
</td>
<td>
      <% @issues.each do |issue| %>
      <% if issue.status_id == 8 && issue.assigned_to then %>
           <a href="<%= @site %>/issues/<%= issue.ticket_id %>" rel="external"><%= issue.ticket_id %></a> <%= issue.subject %>
           <% if issue.assigned_to then %>(<%= issue.assigned_to %>)<% end %><br />
           <% end %>
      <% end %>
</td>
<td>
      <% @issues.each do |issue| %>
           <% if issue.status_id == 14 or issue.status_id == 18 then %>
           <a href="<%= @site %>/issues/<%= issue.ticket_id %>" rel="external"><%= issue.ticket_id %></a> <%= issue.subject %>
           <% if issue.assigned_to then %>(<%= issue.assigned_to %>)<% end %><br />
           <% end %>
      <% end %>
</td>
<td>
      <% @issues.each do |issue| %>
           <% if issue.status_id == 5 then %>
           <a href="<%= @site %>/issues/<%= issue.ticket_id %>" rel="external"><%= issue.ticket_id %></a> <%= issue.subject %>
           <% if issue.assigned_to then %>(<%= issue.assigned_to %>)<% end %><br />
           <% end %>
      <% end %>
</td>
</tr>
</tbody>
</table>
